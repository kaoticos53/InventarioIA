{
  "ApiUrl": "http://localhost:5001",
  "AppName": "Sistema de Inventario",
  "AppVersion": "1.0.0",
  "Environment": "Development",
  "Features": {
    "EnableRegistration": true,
    "EnableEmailVerification": true,
    "EnablePasswordReset": true
  },
  "EmailSettings": {
    "SmtpServer": "smtp.mailtrap.io",
    "SmtpPort": 2525,
    "SmtpUsername": "your_mailtrap_username",
    "SmtpPassword": "your_mailtrap_password",
    "SenderName": "Sistema de Inventario",
    "SenderEmail": "no-reply@inventario.com",
    "SupportEmail": "soporte@inventario.com",
    "EnableSsl": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
